# ============================================
# API CONFIGURATION
# ============================================
VITE_API_URL=http://localhost:6789
VITE_API_TIMEOUT=30000

# ============================================
# APPLICATION
# ============================================
VITE_APP_NAME=SmartRoutine
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# ============================================
# FEATURES FLAGS
# ============================================
VITE_ENABLE_AI_RECIPES=true
VITE_ENABLE_PDF_EXPORT=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# ============================================
# STORAGE
# ============================================
VITE_STORAGE_PREFIX=smartroutine_
VITE_TOKEN_EXPIRY_DAYS=7

# ============================================
# UI/UX
# ============================================
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=pt-BR
VITE_ITEMS_PER_PAGE=12
VITE_TOAST_DURATION=5000

# ============================================
# ALERTS & NOTIFICATIONS
# ============================================
VITE_EXPIRY_WARNING_DAYS=3
VITE_LOW_STOCK_WARNING_DAYS=7

# ============================================
# EXTERNAL SERVICES (Opcional)
# ============================================
# VITE_IMAGES_API_KEY=your_key_here
# VITE_AI_API_KEY=your_key_here

# ============================================
# DEVELOPMENT ONLY
# ============================================
VITE_USE_MOCK_DATA=false
VITE_MOCK_DELAY=500
VITE_LOG_REQUESTS=true