# API CONFIGURATION
VITE_API_URL=https://api.smartroutine.com
VITE_API_TIMEOUT=30000

# APPLICATION
VITE_APP_NAME=SmartRoutine
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production

# FEATURES FLAGS
VITE_ENABLE_AI_RECIPES=true
VITE_ENABLE_PDF_EXPORT=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=false

# STORAGE
VITE_STORAGE_PREFIX=smartroutine_
VITE_TOKEN_EXPIRY_DAYS=30

# UI/UX
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=pt-BR
VITE_ITEMS_PER_PAGE=12
VITE_TOAST_DURATION=5000

# ALERTS & NOTIFICATIONS
VITE_EXPIRY_WARNING_DAYS=3
VITE_LOW_STOCK_WARNING_DAYS=7

# EXTERNAL SERVICES
VITE_IMAGES_API_KEY=your_production_key
VITE_AI_API_KEY=your_production_key

# DEVELOPMENT ONLY
VITE_USE_MOCK_DATA=false
VITE_MOCK_DELAY=0
VITE_LOG_REQUESTS=false