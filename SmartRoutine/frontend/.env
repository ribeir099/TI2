# URL base da API do backend
VITE_API_URL=http://localhost:6789

# Timeout das requisições (em milissegundos)
VITE_API_TIMEOUT=30000

# Nome da aplicação
VITE_APP_NAME=SmartRoutine

# Versão da aplicação
VITE_APP_VERSION=1.0.0

# Ambiente (development, staging, production)
VITE_APP_ENV=development

# Habilitar geração de receitas com IA (simulado)
VITE_ENABLE_AI_RECIPES=production

# Habilitar exportação de relatórios PDF
VITE_ENABLE_PDF_EXPORT=true

# Habilitar analytics/tracking
VITE_ENABLE_ANALYTICS=false

# Habilitar modo debug
VITE_ENABLE_DEBUG=true

# Prefixo das chaves do localStorage
VITE_STORAGE_PREFIX=smartroutine_

# Tempo de expiração do token (em dias)
VITE_TOKEN_EXPIRY_DAYS=7

# Tema padrão (light, dark, system)
VITE_DEFAULT_THEME=light

# Idioma padrão (pt-BR, en-US, es-ES)
VITE_DEFAULT_LANGUAGE=pt-BR

# Itens por página (paginação)
VITE_ITEMS_PER_PAGE=12

# Duração das notificações (em milissegundos)
VITE_TOAST_DURATION=1000

# Dias para alertar sobre vencimento próximo
VITE_EXPIRY_WARNING_DAYS=3

# Dias para alertar sobre estoque baixo
VITE_LOW_STOCK_WARNING_DAYS=7

# API Key para serviço de imagens (Unsplash, etc.)
# VITE_IMAGES_API_KEY=

# API Key para serviço de IA (OpenAI, etc.)
# VITE_AI_API_KEY=

# Mock de dados (true para usar dados fake)
VITE_USE_MOCK_DATA=false

# Delay de resposta simulado (em ms)
VITE_MOCK_DELAY=500

# Log de requisições no console
VITE_LOG_REQUESTS=false